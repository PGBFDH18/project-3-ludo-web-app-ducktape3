
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Set up game</h1>
<form action="Game/Start">
    @for (var i = 1; i < 5; i++)
    {
        <h2> Player @i</h2>

        var test = "name" + i;
        var selectionName = "color" + i;
        
        <select name="@selectionName">
            <option>Select a Color</option>
            <option>Yellow</option>
            <option>Red</option>
            <option>Blue</option>
            <option>Green</option>
        </select>

        <input type="text" name="@test" /><br>
    }
    <input type="submit">
</form> 